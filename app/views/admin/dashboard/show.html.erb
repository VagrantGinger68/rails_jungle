<div class="container">
  <h1 class="mt-4">Admin Dashboard</h1>
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><u><strong>Products</strong></u></h5>
          <p class="card-text">Total Products: <strong><%= @product_count %></strong></p>
          <%= link_to 'View Product List', admin_products_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><u><strong>Categories</strong></u></h5>
          <p class="card-text">Total Categories: <strong><%= @category_count %></strong></p>
          <%= link_to 'View Category List', admin_categories_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>
